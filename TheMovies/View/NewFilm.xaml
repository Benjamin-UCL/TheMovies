<Window x:Class="TheMovies.NewFilm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TheMovies"
        mc:Ignorable="d"
        Title="New Film" Height="350" Width="250">

    <Window.Resources>
 
    </Window.Resources>
        
    <StackPanel Margin="15">

        <TextBlock Text="Ny Film" 
                   FontSize="12" 
                   HorizontalAlignment="Left"/>

        <Label Content="Titel" 
               FontSize="8" 
               Margin="0,10,0,0"
               Padding="0,0"/>
        
        <TextBox Name="FilmTitle"
                 Style="{StaticResource EnterInfoStyle}"
                 Text="{Binding newTitle,UpdateSourceTrigger=PropertyChanged}">
            
        </TextBox>


        <Label Content="Løbetid i minutter" 
               FontSize="8" 
               Margin="0,10,0,0"
               Padding="0,0"/>
        <TextBox Name="Duration"
                 Style="{StaticResource EnterInfoStyle}"
                 Text="{Binding newDuration,UpdateSourceTrigger=PropertyChanged}">
            
        </TextBox>
        
        <TextBlock Text="Genre"
                   FontSize="12"
                   Margin="0,10"
                   Padding="0,10"/>

            <ItemsControl ItemsSource="{Binding Genres}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
                
            <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <ToggleButton Content="{Binding Name}" 
                                      Style="{StaticResource GenreButtonStyle}" 
                                      IsChecked="{Binding IsSelected, Mode=TwoWay}"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>


        <Button Content="+ Tilføj genre" 
                Style="{StaticResource SubmitButtonStyle}"
                Margin="0,5"
                Padding="5,0"
                HorizontalAlignment="Left"
                Click="OpenNewWindow_Click"/>

        <Button Content="Tilføj film"
                Style="{StaticResource SubmitButtonStyle}"
                HorizontalAlignment="Left" 
                Command="{Binding addMovieCommand}"/>


    </StackPanel>
</Window>

<Page x:Class="TheMovies.View.Screening"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TheMovies.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Screening">

    <Grid>
        <!-- 2 columns -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="4*" />
            </Grid.ColumnDefinitions>

            <!-- left column: 4 rows-->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="35" />
                    <RowDefinition Height="35" />
                    <RowDefinition Height="35" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Border BorderBrush="Black" BorderThickness="0.5">
                    <TextBlock Text="Administrer Film" 
                       Background="LightGray" 
                       Grid.Row="0" 
                       Padding="10"
                       FontWeight="Bold"
                       VerticalAlignment="Center"/>
                </Border>

                <Border Grid.Row="1" BorderBrush="Black" BorderThickness="0.5">
                    <TextBlock Text="Forestillinger" 
                       Background="Orange" 
                       Grid.Row="1" 
                       Padding="10"                           
                       FontWeight="Bold"
                       VerticalAlignment="Center"/>
                </Border>

                <Border Grid.Row="2" BorderBrush="Black" BorderThickness="0.5">
                    <TextBlock Text="Osv..." 
                       Background="LightGray" 
                       Grid.Row="2" 
                       Padding="10"                           
                       FontWeight="Bold"
                       VerticalAlignment="Center"/>
                </Border>

                <Border Grid.Row="3" BorderBrush="Black" BorderThickness="0.5">
                    <TextBlock Text="" 
                       Background="LightGray" 
                       Grid.Row="3" 
                       Padding="10"/>
                </Border>




            </Grid>

            <!-- right column: nested grid-->
            <Grid Grid.Column="1" Background="White">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <!-- button -->
                    <RowDefinition Height="*" />
                    <!-- Listbox -->
                </Grid.RowDefinitions>

                <Button Grid.Row="0" Content="Tilføj Forestilling" 
                HorizontalAlignment="Left" 
                Style="{StaticResource SubmitButtonStyle}"
                Margin="20,20,0,0"                
                VerticalAlignment="Top" 
                Width="auto"
                Click="OpenNewWindow_Click"/>

                <!-- Movie List -->
                <ListBox Grid.Row="1" Margin="20,20,20,20" ItemsSource="{Binding Movies}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150" />
                                    <ColumnDefinition Width="150" />
                                    <ColumnDefinition Width="50" />
                                    <ColumnDefinition Width="200" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="{Binding Title}" />
                                <TextBlock Grid.Column="2" Text="{Binding DurationInHoursandMinutes}" />
                                <TextBlock Grid.Column="1" Text="{Binding Director}" /> <!--show duration--> 
                                <TextBlock Grid.Column="3" Text="{Binding GenreList}" /> <!--show location-->
    
                                
                        </Grid>



                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

            </Grid>
        </Grid>
</Page>

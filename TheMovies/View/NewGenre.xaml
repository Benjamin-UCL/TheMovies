<Window x:Class="TheMovies.NewGenre"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TheMovies"
        mc:Ignorable="d"
        Title="New Genre" Height="200" Width="250">

    <Window.Resources>

    </Window.Resources>
    
    <StackPanel Margin="015">
        <TextBlock Text="Ny Genre"
                   FontSize="12"
                   HorizontalAlignment="Left" />

        <TextBox Name="FilmGenre"
                 Style="{StaticResource EnterInfoStyle}"
                 Text ="{Binding newGenreName,UpdateSourceTrigger=PropertyChanged}" />


        <Button Content="Tilføj genre"
                Style="{StaticResource SubmitButtonStyle}"
                HorizontalAlignment="Left"
                Command="{Binding addGenreCommand}"/>



    </StackPanel>
</Window>
